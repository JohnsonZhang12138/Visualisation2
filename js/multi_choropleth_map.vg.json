{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Country of Chocolate CompanyBean Origin",
  "repeat": ["company_number", "number_of_beans"],
  "columns": 1,
  "resolve": {
    "scale": {
      "color": "independent"
    }
  },


  "spec": {
    "projection": {
          "type": "equirectangular"
        },
    "width": 400,
    "height": 300,

    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/JohnsonZhang12138/Visualisation2/main/data/world.geoTopo.json",
          "format": {"type": "topojson", "feature": "world.geo"}
        },   
        "transform": [
          {"calculate": "'Data is not available in ' + datum.properties.name", 
            "as": "none"
          }
        ],
        "mark": {
          "type": "geoshape",
          "fill": "#ddd",
          "stroke": "white",
          "strokeWidth": 1
        },
        "encoding": {"tooltip": {"field": "none"}}
      },

      {
        "data": {
          "url": "https://raw.githubusercontent.com/JohnsonZhang12138/Visualisation2/main/data/bean_company_country2.csv"
        },
        
        "transform": [
          {
            "lookup": "country",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/JohnsonZhang12138/Visualisation2/main/data/world.geoTopo.json",
                "format": {
                      "type": "topojson",
                      "feature": "world.geo"
                    }
              },
              "key": "properties.name"
            },
            "as": "geo"
          }
        ],
        
        "mark": {
          "type": "geoshape"
          },
        "encoding": {
          "shape": {"field": "geo", "type": "geojson"},
          "color": {
            "field": {"repeat": "repeat"},
            "type": "quantitative",
            "scale": {"type": "threshold",
                      "domain": [1, 50, 100, 150, 200], "scheme": "reds"
                      },
            "legend": {"format": ".2s", "title": "Number"}
          },
          "tooltip": [
            {"field": "country", "type": "nominal", "title": "Country"},
            {
              "field": {"repeat": "repeat"},
              "type": "quantitative",
              "title": "Number",              
              "format": ","
            }
          ]
        }        
      },
      {
        "data": {
          "values": [
            {
              "company_number": "Number of companies",
              "number_of_beans": "Number of Beans"
              
            }
          ]
        },
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "bottom",
          "x": "width",
          "y": 0
        },
        "encoding": {"text": {"field": {"repeat": "repeat"}}}
      }
    ]
  }
}

  


